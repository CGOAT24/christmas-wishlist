---
import '../styles/global.css';

interface Props {
	title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title } = Astro.props;
---
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />
<link rel="preload" href="/christmas-wishlist/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/christmas-wishlist/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />
<link rel="canonical" href={canonicalURL} />
<title>{title}</title>
<meta name="title" content={title} />